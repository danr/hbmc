executable hbmc
  main-is:             HBMC/Main.hs
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       base >=4 && <5,
                       tip-lib == 0.2.2,
                       geniplate-mirror >= 0.7.1,

                       cmdargs,
                       process,
                       directory,
                       filepath,
                       temporary,

                       minisat >=0.1,

                       transformers >=0.3,
                       mtl >=2.1,
                       containers >=0.5,
                       data-ordlist,

                       pretty >=1.1,
                       pretty-show >=1.6

  other-modules:
    HBMC.Data
    HBMC.Identifiers
    HBMC.Lib
    HBMC.Live
    HBMC.Merge
    HBMC.Monadic
    HBMC.Params
    HBMC.Projections
    HBMC.ToSimple
